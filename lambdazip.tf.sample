terraform {
  required_providers {
    lambdazip = {
      source = "winebarrel/lambdazip"
    }
  }
}

provider "lambdazip" {
}

resource "lambdazip_file" "node_program" {
  base_dir      = "example-app"
  source        = "**"
  excludes      = [".*", "README.md"]
  output        = "my-program.zip"
  before_create = "npm i"

  triggers = [
    filesha256("example-app/index.js"),
    filesha256("example-app/package.json"),
    filesha256("example-app/package-lock.json"),
  ]
}

output "zip_sha256" {
  value = lambdazip_file.node_program.base64sha256
}
